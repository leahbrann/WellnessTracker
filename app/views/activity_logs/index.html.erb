<h1>My Logs</h1>
<div class = "row">
      <div class = "col-md-12 col-lg-6">
<% if @activity_logs.count > 0 %>
<table class="table table-condense table-hover">
	<thead>
		<tr>
			<th>Date</th>
			<th>Points</th>
		</tr>
	</thead>
<% @activity_logs.each do |log| %>
<tr>
<td><%= log.date.strftime('%b %d') %></td>
<td><%= log.points %></td>
<td><%= link_to activity_log_path(log.id), class: "btn btn-default btn-sm hidden-xs" do %>
    <i class="glyphicon glyphicon-list"> Show</i>
	<% end %></td>
<td><%= link_to edit_activity_log_path(log.id), class: "btn btn-default btn-sm" do %>
    <i class="glyphicon glyphicon-pencil"> Edit</i>
	<% end %></td>	
<td><%= link_to copy_activity_log_path(log.id), class: "btn btn-default btn-sm" do %>
    <i class="glyphicon glyphicon-share"> Copy</i>
	<% end %></td>
<td><%= link_to log, {:method => "delete", :class => "btn btn-default btn-sm hidden-xs", data: { confirm: 'Are you sure?' }} do %>
    <i class="glyphicon glyphicon-remove"> Delete</i>
	<% end %></td>
<% end %>
</table>
<% else %>
<p>No Logs Found</p>
<% end %>

</div>
    </div>

<%= button_to "Log a new day", new_activity_log_path, {:method => "get", :class => "btn btn-primary"} %>

