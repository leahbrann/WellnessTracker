<%= simple_form_for @activity_record, :html => {:class => 'form-horizontal' }  do |f|%>
	<%= f.input :activity_id, collection: @categories, as: :grouped_select, group_method: :activities %>
	<%= f.text_field :date, :id => "datepicker", :value => Date.today %>
	<%= f.button :submit %>

<% end %>



<script>
$('#datepicker').datepicker({format: 'yyyy-mm-dd', todayHighlight: true});
</script>