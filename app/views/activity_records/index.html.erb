<h1>My Activities</h1>
<% if @activity_records.count > 0 %>
<table class="table">
	<thead>
		<tr>
			<th>Date</th>
			<th>Activity</th>
		</tr>
	</thead>
<% @activity_records.each do |record| %>
<tr>
<td><%= record.date %></td>
<td><%= record.activity.title %></td>
<td><%= link_to 'Edit', edit_activity_record_path(record) %></td>
<td><%= link_to 'Delete', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>
<% end %>
</table>
<% else %>
<p>No Activities Found</p>
<% end %>

<%= button_to "Log an activity", new_activity_record_path, {:method => "get", :class => "btn btn-primary"} %>